# Database Configuration (choose one)
DATABASE_TYPE=mongodb
# For MongoDB
MONGODB_URI=mongodb://localhost:27017/myni-cms
# For PostgreSQL  
POSTGRES_URL=postgresql://user:password@localhost:5432/myni-cms

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=your-bucket-name

# Authentication
JWT_SECRET=your-super-secret-jwt-key
BCRYPT_ROUNDS=12

# CMS Configuration
CMS_ADMIN_PATH=/admin
UPLOADS_PATH=/uploads
MAX_FILE_SIZE=10485760

# Next.js
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Demo Authentication (Development Only)
DEMO_ADMIN_EMAIL=demo.admin@example.test
DEMO_ADMIN_PASSWORD=demo_admin_pass_123
DEMO_EDITOR_EMAIL=demo.editor@example.test
DEMO_EDITOR_PASSWORD=demo_editor_pass_123
